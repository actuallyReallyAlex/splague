{
  "name": "splague",
  "version": "2.0.0",
  "description": "A MERN application bootstrapped with create-mern-application.",
  "main": "build/index.js",
  "scripts": {
    "build": "npm run format && npm run lint && npm run build-client && npm run build-server",
    "build-client": "rimraf dist && webpack --display=errors-only",
    "build-server": "rimraf build && tsc && copyfiles -f src/server/assets/**/* build/assets",
    "cy:open": "cypress open",
    "cy:run": "cypress run",
    "dev": "env-cmd -e development npm run spinup",
    "format": "prettier --write src/**/*",
    "lint": "eslint src --color",
    "lint-client": "eslint src/client --color",
    "lint-server": "eslint src/server --color",
    "spinup": "node build/index.js",
    "start": "start-server-and-test dev http://localhost:3000 'webpack-dev-server --info=false'",
    "test": "start-server-and-test test-server http://localhost:3000 cy:run",
    "test-gui": "start-server-and-test test-server http://localhost:3000 cy:open",
    "test-server": "env-cmd -e test npm run spinup"
  },
  "keywords": [],
  "author": "",
  "license": "",
  "dependencies": {
    "chalk": "^4.1.0",
    "cors": "^2.8.5",
    "date-fns": "^2.14.0",
    "express": "^4.17.1",
    "mongoose": "^5.9.20",
    "morgan": "^1.10.0",
    "nes.css": "^2.3.0",
    "node-fetch": "^2.6.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-redux": "^7.2.0",
    "react-tooltip": "^4.2.7",
    "redux": "^4.0.5",
    "redux-thunk": "^2.3.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.10.3",
    "@babel/core": "^7.10.3",
    "@babel/plugin-proposal-class-properties": "^7.10.1",
    "@babel/plugin-transform-runtime": "^7.10.3",
    "@babel/preset-env": "^7.10.3",
    "@babel/preset-react": "^7.10.1",
    "@babel/runtime": "^7.10.3",
    "@svgr/webpack": "^5.4.0",
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.6",
    "@types/mongoose": "^5.7.28",
    "@types/morgan": "^1.9.1",
    "@types/node-fetch": "^2.5.7",
    "@types/react": "^16.9.41",
    "@types/react-dom": "^16.9.8",
    "@types/react-redux": "^7.1.9",
    "@typescript-eslint/eslint-plugin": "^3.4.0",
    "@typescript-eslint/parser": "^3.4.0",
    "babel-loader": "^8.1.0",
    "clean-webpack-plugin": "^3.0.0",
    "copyfiles": "^2.3.0",
    "css-loader": "^3.6.0",
    "cypress": "^4.9.0",
    "env-cmd": "^10.1.0",
    "eslint": "^7.3.1",
    "eslint-plugin-react": "^7.20.0",
    "html-webpack-plugin": "^4.3.0",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "source-map-loader": "^1.0.0",
    "start-server-and-test": "^1.11.0",
    "style-loader": "^1.2.1",
    "ts-loader": "^7.0.5",
    "typescript": "^3.9.5",
    "url-loader": "^4.1.0",
    "webpack": "^4.43.0",
